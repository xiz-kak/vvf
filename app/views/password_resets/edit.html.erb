<section>
  <div class="full-wide-header py4 px2">
    <div class="container">
      <h2 class="mb1 col-md-offset-2">Password reset</h2>
    </div>
  </div>
</section>

<div class="container bg-white">
  <%= form_for @user, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>
    <% if @user.errors.any? %>
      <%= render partial: 'layouts/error_container', locals: {errors: @user.errors} %>
    <% end %>

    <div class="form-horizontal col-md-offset-2">
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-md-2' %>
        <div class="col-md-4">
          <%= @user.email %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-md-2' %>
        <div class="col-md-4">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label col-md-2' %>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-offset-2">
        <%= f.submit 'Reset', class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
</div>

