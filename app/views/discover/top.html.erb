<div>
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="10000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <div class="hero-image hero-image-01">
          <div class="carousel-content-top">
            <%= image_tag 'vvf_color_mark.png', size: '230x260' %>
          </div>
          <div>
            <p class="hero-title">Vin-Vin Funding</p>
          </div>
          <div>
            <p class="hero-subtitle">New Vietnam now begins...</p>
          </div>
        </div>
        <div class="carousel-caption">
        </div>
      </div>
      <div class="item">
        <div class="hero-image hero-image-02">
          <div>
            <p class="hero-sentence">Throw your net.<br>Get your fish.</p>
          </div>
          <div>
            <%= link_to 'Start a project', start_projects_path, class: 'hero-start-btn btn btn-lg btn-white btn-ghost' %>
          </div>
        </div>
        <div class="carousel-caption">
        </div>
      </div>
      <div class="item">
        <div class="hero-image hero-image-03">
        </div>
        <div class="carousel-caption">
          Photo3
        </div>
      </div>
      <div class="item">
        <div class="hero-image hero-image-04">
        </div>
        <div class="carousel-caption">
          Photo4
        </div>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <%= image_tag 'vvf_line.png', class: 'hero-bottom-line' %>
</div>

<div class="favorites-area border-bottom">
  <div class="container favorites-content">
    <div class="row">
      <% p = Project.active.first if Project.active.count > 0 %>
      <% if p.present? %>
      <div class="col col-md-10">
        <div class="row">
          <h3 class="sr-only">Our favorite projects</h3>
          <div class="projects-slider">
            <div class="row">
              <div class="col col-md-12">
                <div class="title">
                  <div class="row">
                    <div class="col">
                      <h3>
                        <%= link_to 'Our Favorites:', discover_category_path(1) %>
                        <%= link_to 'Art', discover_category_path(1) %>
                      </h3>
                    </div>
                    <div class="col col-right">
                      <%= link_to 'See all this category', discover_category_path(1), class: 'see-all-category' %>
                    </div>
                  </div>
                </div>
                <div class="project-card-wrap">
                  <div class="project-card">
                    <div class="project-image">
                      <%= link_to image_tag(p.image(locale)), p %>
                    </div>
                    <div class="project-card-description">
                      <h4><%= link_to p.title(locale), p %></h4>
                      <p><%= link_to p.user.name, p.user %></p>
                      <p class="grey-dark"><%= p.blurb(locale) %></p>
                      <div class="project-card-footer">
                        <div class="project-location-category">
                          <%= link_to discover_category_path(p.category), class: 'mr2' do %>
                            <i class="glyphicon glyphicon-tag"></i>
                            <%= p.category.name(locale) %>
                          <% end %>
                          <i class="glyphicon glyphicon-globe"></i>
                          <% p.project_locales.each do |l|%>
                            <kbd><%= l.language.code %></kbd>
                          <% end %>
                        </div>
                        <div class="project-status-wrap absolute-bottom">
                          <% sum = p.summary %>
                          <div class="project-progress mb1">
                            <div class="progress">
                              <div class="progress-bar progress-bar-info" style="width:<%= sum.achieved %>%">
                              </div>
                            </div>
                          </div>
                          <ul class="project-status list-inline">
                            <li class="mr2">
                              <strong class="block h4">
                                <%= sum.achieved %>%
                              </strong>
                              <span class="grey-dark">funded</span>
                            </li>
                            <li class="mr2">
                              <strong class="block h4">
                                $<%= sum.funded_amount_f %>
                              </strong>
                              <span class="grey-dark">pledged</span>
                            </li>
                            <li class="mr2">
                              <strong class="block h4">
                                <%= sum.funded_count %>
                              </strong>
                              <span class="grey-dark">backers</span>
                            </li>
                            <li class="mr2">
                              <strong class="block h4">
                                <%= p.days_to_go %>
                              </strong>
                              <span class="grey-dark">days to go</span>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <div class="col-md-2">
        <div class="category-nav ml2 mt2 mr2 mb2">
          <ul class="list-no-style pl1">
            <% Category.sorted.each do |c| %>
              <li><%= link_to c.name(locale), discover_category_path(c) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="recommended-area py4">
  <div class="container px2 py2">
    <div class="recommended-title pb2">
      <div class="row">
        <div class="col">
          <h3>Recommended for you</h3>
        </div>
        <div class="col col-right">
          <%= link_to 'See all', discover_search_path, class: 'btn btn-default btn-sm' %>
        </div>
      </div>
    </div>
  </div>
  <div class="container px2 pb2">
    <div class="row">
      <% Project.active.limit(6).each do |p| %>
        <div class="col-md-4 col">
          <div class="project-tile project-tile-tall-big">
            <div class="project-image">
              <%= link_to image_tag(p.image(locale)), p %>
            </div>
            <div class="project-tile-content">
              <h5><%= link_to p.title(locale), p %></h5>
              <p>by <%= link_to p.user.name, p.user %></p>
              <p class="grey-dark"><%= p.blurb(locale) %></p>
            </div>
            <div class="project-tile-footer">
              <div class="project-tile-category-lang">
                <%= link_to discover_category_path(p.category), class: 'mr2' do %>
                  <i class="glyphicon glyphicon-tag"></i>
                  <%= p.category.name(locale) %>
                <% end %>
                <i class="glyphicon glyphicon-globe"></i>
                <% p.project_locales.each do |l|%>
                  <kbd><%= l.language.code %></kbd>
                <% end %>
              </div>
              <div class="project-tile-status-wrap">
                <% sum = p.summary %>
                <div class="project-progress-bar">
                  <div class="progress">
                    <div class="progress-bar progress-bar-info" style="width:<%= sum.achieved %>%">
                    </div>
                  </div>
                </div>
                <div class="project-status">
                  <ul class="project-status list-inline">
                    <li class="mr1">
                      <strong class="block h5">
                        <%= sum.achieved %>%
                      </strong>
                      <span class="grey-dark">funded</span>
                    </li>
                    <li class="mr1">
                      <strong class="block h5">
                        $<%= sum.funded_amount_f %>
                      </strong>
                      <span class="grey-dark">pledged</span>
                    </li>
                    <li class="mr1">
                      <strong class="block h5">
                        <%= sum.funded_count %>
                      </strong>
                      <span class="grey-dark">backers</span>
                    </li>
                    <li class="mr1">
                      <strong class="block h5">
                        <%= p.days_to_go %>
                      </strong>
                      <span class="grey-dark">days to go</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="start-project-area">
  <p class="project-start-message">Want to start?<br>Yes, you can start now.</p>
  <%= link_to 'Start a project', start_projects_path, class: 'btn btn-white btn-ghost btn-lg mt2'%>
</div>
