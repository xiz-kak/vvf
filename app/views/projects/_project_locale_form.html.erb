<div class="field">
  <label>
    <% if params['action'] == 'update' %>
      <% checked = pl.use_this_language == "1" %>
    <% else %>
      <% checked = pl.persisted? && !pl.marked_for_destruction? %>
    <% end %>
    <%= f.check_box :use_this_language, checked: checked %>
    <span>Use this language</span>
  </label>
</div>
<%= f.hidden_field :language_id %>
<%= f.hidden_field :id %>
