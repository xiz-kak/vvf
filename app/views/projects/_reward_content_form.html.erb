<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :image %><br>
  <% if f.object.image.present? %>
    <%= image_tag f.object.image.url, height: 300 %>
  <% end %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<%= f.hidden_field :language_id %>
<%= f.hidden_field :id %>
