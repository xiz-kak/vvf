<div class="field-group">
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price_f, step: 0.01 %>
  </div>
  <div class="field">
    <%= f.label :count %><br>
    <%= f.number_field :count %>
  </div>
  <%= f.fields_for :reward_contents do |rcf| %>
    <%= render partial: "reward_content_form", locals: {f: rcf} %>
  <% end %>
  <%= link_to_remove_field("Remove", f, {}) %>
  <%= f.hidden_field :id %>
</div>
