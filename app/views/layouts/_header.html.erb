<header class="navbar navbar-fixed-top site-nav">
  <div class="navbar-header">
    <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to 'Vin-Vin Funding', root_path, class: 'navbar-brand' %>
  </div>
  <div class="collapse navbar-collapse target">
    <ul class="nav navbar-nav">
      <li><%= link_to 'Discover', discover_index_path %></li>
      <li><a href="">Start a project</a></li>
      <li><a href="">About us</a></li>
    </ul>
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">
        <i class="glyphicon glyphicon-search"></i>
      </button>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
      <% cur_lang, sel_lang = Language.sorted.pluck(:code).partition do |c| %>
        <% (params[:locale].blank? && c == 'en') || params[:locale] == c %>
      <% end %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= cur_lang[0] %><span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% sel_lang.each do |c| %>
            <li><%= link_to c, url_for(locale: c) %></li>
          <% end %>
        </ul>
      </li>
      <li><a href="">Profile</a></li>
    </ul>
  </div>
</header>
