<header class="navbar <%= 'navbar-fixed-top' if params[:action] == 'top' %> site-nav">
  <div class="navbar-header">
    <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to 'Vin-Vin Funding', root_path, class: 'navbar-brand' %>
  </div>
  <div class="collapse navbar-collapse target">
    <ul class="nav navbar-nav">
      <li><%= link_to 'Discover', discover_index_path %></li>
      <li><a href="">Start</a></li>
      <li><a href="">About us</a></li>
    </ul>
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control form-control-ghost" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-white btn-ghost">
        <i class="glyphicon glyphicon-search"></i>
      </button>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
      <% cur_lang, sel_lang = Language.sorted.pluck(:code).partition do |c| %>
        <% (params[:locale].blank? && c == 'en') || params[:locale] == c %>
      <% end %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= cur_lang[0] %>
        </a>
        <ul class="dropdown-menu">
          <% sel_lang.each do |c| %>
            <li><%= link_to c, url_for(locale: c) %></li>
          <% end %>
        </ul>
      </li>
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle <%= 'admin-name' if current_user.is_admin %>" data-toggle="dropdown">
            <%= current_user.name %>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit', edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', :logout, method: :post %></li>
          </ul>
        </li>
      <% else %>
        <li><a data-toggle="modal" href="#signup-modal">Sign up</a></li>
        <li><a data-toggle="modal" href="#login-modal">Log in</a></li>
      <% end %>
    </ul>
  </div>
</header>

<div class="modal fade" id="signup-modal">
  <div class="modal-dialog modal-sm modal-dialog-middle">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Sign up</h4>
      </div>
      <div class="modal-body">
        <div class="container">
        </div>
        <%= link_to 'Sign up with Facebook', auth_at_provider_path(provider: :facebook),
          class: 'btn btn-primary btn-block' %>
        <%= link_to 'Sign up with Twitter', auth_at_provider_path(provider: :twitter),
          class: 'btn btn-info btn-block' %>
        <%= link_to 'Sign up with E-mail', new_user_path,
          class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="login-modal">
  <div class="modal-dialog modal-sm modal-dialog-middle">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Log in</h4>
      </div>
      <div class="modal-body">
        <%= link_to 'Log in with Facebook', auth_at_provider_path(provider: :facebook),
          class: 'btn btn-primary btn-block' %>
        <%= link_to 'Log in with Twitter', auth_at_provider_path(provider: :twitter),
          class: 'btn btn-info btn-block' %>
        <%= link_to 'Log in with E-mail', :login,
          class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
</div>
